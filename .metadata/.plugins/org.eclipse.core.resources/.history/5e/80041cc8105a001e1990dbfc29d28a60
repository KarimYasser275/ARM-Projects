
#ifndef USART_PRIVATE_H
#define USART_PRIVATE_H

typedef struct{
	volatile uint32_t SR;
	volatile uint32_t DR;
	volatile uint32_t BRR;
	volatile uint32_t CR[MAX_USART_CR];
	volatile uint32_t GTPR;
}USART_Register;

typedef enum
{
	USART_CR1,
	USART_CR2,
	USART_CR3,
	MAX_USART_CR
}USART_CR_t;

typedef enum
{
	OFFSET_USART_SR_PE,
	OFFSET_USART_SR_FE,
	OFFSET_USART_SR_NE,
	OFFSET_USART_SR_ORE,
	OFFSET_USART_SR_IDLE,
	OFFSET_USART_SR_RXNE,
	OFFSET_USART_SR_TC,
	OFFSET_USART_SR_TXE,
	OFFSET_USART_SR_LBD,
	OFFSET_USART_SR_CTS,
}USART_SR_BitsOffset;

typedef enum
{
	OFFSET_USART_CR1_SBK,
	OFFSET_USART_CR1_RWU,
	OFFSET_USART_CR1_RE,
	OFFSET_USART_CR1_TE,
	OFFSET_USART_CR1_IDLEIE,
	OFFSET_USART_CR1_RXNEIE,
	OFFSET_USART_CR1_TCIE,
	OFFSET_USART_CR1_TXEIE,
	OFFSET_USART_CR1_PEIE,
	OFFSET_USART_CR1_PS,
	OFFSET_USART_CR1_PCE,
	OFFSET_USART_CR1_WAKE,
	OFFSET_USART_CR1_M,
	OFFSET_USART_CR1_UE,
}USART_CR1_BitsOffset;

typedef enum
{
	ADD,
	LBDL = 5,
	LBDIE,
	LBCL = 8,
	CPHA,
	CPOL,
	CLKEN,
	STOP,
	LINEN = 14,
}USART_CR2_BitsOffset;

#define 	USART1 		((USART_Register *) 0x40013800)

#endif
